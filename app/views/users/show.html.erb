<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<table>
  <tr>
    <td>
      Name:
    </td>
    <td>
      <%= @user.name %>
    </td>
  </tr>
  <tr>
    <td>
      Email:
    </td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
    <tr>
    <td>
      Created at:
    </td>
    <td>
      <%= @user.created_at %>
    </td>
  </tr>
  <tr>
    <td>
      Updated at:
    </td>
    <td>
      <%= @user.updated_at %>
    </td>
  </tr>
  <tr>
    <td>
      Current Time:
    </td>
    <td>
      <%= Time.now %>
    </td>
  </tr>
</table>
